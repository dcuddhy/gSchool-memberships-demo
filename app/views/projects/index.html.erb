<div class= "page-header">
  <div class= "pull-right">
    <%= link_to 'New Project', new_project_path, class:"btn btn-primary" %>
  </div>

  <h1>Projects</h1>
</div>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Tasks</th>
    </tr>
  </thead>
  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td><%= link_to project.name, project_path(project) %></td>
        <td><%= project.tasks.count %></td>
      </tr>
    <% end %>
  </tbody>
</table>
